{% extends 'relation.base.html.twig' %}

{% block content %}
    <h1>Locations</h1>

    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">id</th>
            <th scope="col">name</th>
            <th scope="col">gnd</th>
        </tr>
        </thead>
        <tbody>
        {% for location in locations %}
            {% if not location.incunables.empty or not location.subjects.empty %}
            <tr>
                <td><a href="{{ path('relation_location', {'id': location.id}) }}">#{{ location.id }}</a></td>
                <td>{{ location }}</td>
                <td>{{ location.gnd }}</td>
            </tr>
            {% endif %}
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
